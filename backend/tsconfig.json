{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "es2022",
    "lib": ["es2022"], // or let @tsconfig/node24 set it if you remove target override
    "types": ["node"], // ðŸ‘ˆ Add this if using Node.js globals
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "jsx": "react-jsx",
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": false, // ðŸ‘ˆ Consider disabling for libraries
  },
  "include": ["src"],
  "extends": "@tsconfig/node24/tsconfig.json"
}